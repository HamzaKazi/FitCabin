
<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-blue">
    <h3 class="typed-js" data-controller="typed-js"></h3>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My workouts</h3>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
        Log exercise
    </button>
  </div>
</div>







<% @workouts.each do |workout| %>
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <div class="d-flex justify-content-between">
        <h5 class="card-title"><strong><%= workout.date.strftime('%d/%m/%Y')%></strong></h5>
          <button type="button" class="btn btn-primary" style= "width: 100px; height: 60px" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Launch demo
          </button>
        <%= link_to workout_path(workout), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this workout log?" } do %>
          <%= image_tag "bin_delete.png", style: "width: 25px; height: 25xpx" %>
        <% end %>
    </div>
  </div>
 </div>
<% end %>

