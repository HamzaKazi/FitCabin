
<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-blue">
    <h3 class="typed-js" data-controller="typed-js"></h3>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My workouts</h3>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
        Log workout
    </button>
  </div>
</div>

<% @workouts.each do |workout| %>
  <%= link_to  workout_path(workout) do %>
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <div class="d-flex justify-content-between">
          <h5 class="card-title"><strong><%= workout.name %></strong></h5>
          <h5><strong><%= workout.date.strftime('%d/%m/%Y')%></strong></h5>
    <% end %>
          <button type="button" class="btn btn-primary" style= "width: 100px; height: 50px; padding: 1px;" data-bs-toggle="modal" data-bs-target="#exampleModal<%= workout.id %>">
            Add exercise
          </button>
          <%= link_to workout_path(workout), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this workout log?" } do %>
            <%= image_tag "bin_delete.png", style: "width: 20px; height: 20px" %>
          <% end %>
        </div>
      </div>
    </div>
  <div class="modal fade" id="exampleModal<%= workout.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Add exercise details</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= render "exercises/new", exercise: @exercise, workout: workout %>
        </div>
      </div>
    </div>
  </div>
<% end %>





<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Enter details of your workout</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render "new" %>
      </div>
    </div>
  </div>
</div>


