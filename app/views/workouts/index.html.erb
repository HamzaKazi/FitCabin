
<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-blue">
    <h1></h1>
    <h3 class="typed-js" data-controller="typed-js"></h3>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My workouts</h3>
  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
    Log Workout
  </button>
  </div>


<% @workouts.each do |workout| %>
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><strong><%= workout.exercise%></strong> <button><%= link_to "Delete", workout_path(workout), class: "btn btn-cancel", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this workout log?" } %> </button></h5>
      <p class="card-text"><em>Sets:</em>      <%= workout.set%></p>
      <p class="card-text"><em>Repititions:</em>      <%= workout.rep%></p>
      <p class="card-text"><em>Weight:</em>      <%= workout.weight%></p>
      <p class="card-text"><em>Date:</em>      <%= workout.date.strftime('%d/%m/%Y')%></p>

      <%# <%= link_to "Details", workout_path(workout) %>
    </div>
  </div>
<% end %>

