<section id="header" class="jumbotron text-center">
  <%= form_with url: vehicles_path, method: :get, class: "d-flex" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a vehicle"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
