
<div class = "background-workout" >
<h1 class=""><%= @food.name %></h1>
<p class = "date-title" >Date: <%=@food.date.strftime('%d/%m/%Y')%></p>

<div class="card-exercise" style="width: 30rem; height: 30rem;">
  <div class="card-body">

    <% @meals.each do |meal| %>
      <div class="d-flex justify-content-between">
        <span class="text-decoration-line-through"></span>

            <p class="lead-exercise"><em>Food:</em>    <%=meal.name%></p>
            <p class="lead-exercise"><em>Weight:</em>    <%=meal.calories%>g</p>

        <%= link_to food_path(meal.food), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this workout log?" } do %>
          <%= image_tag "bin_delete.png", style: "width: 20px; height: 20px" %>
        <% end %>
      </div>
    <% end %>
</div>

</div>
    <div class="jumbotron text-center", data-controller="nutritionix">
  <%= form_with url: food_path, method: :get, class: "nutri d-flex" do %>
    <%= text_field_tag :query, "" , placeholder: "Enter ingredient", class:"anything" %>
    <%= text_field_tag :weight, "" , placeholder: "Enter weight in grams" %>
    <%= submit_tag "Search", id: "query-search", class: "btn-nutri btn-primary" %>
  <% end %>
</div>
