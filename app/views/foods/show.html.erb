

<div class = exercise-background >
<img src= "https://res.cloudinary.com/hamzakazi/image/upload/v1663064465/pngfind.com-fitness-png-312642_ncnugy.png" class = "heart-fitness" alt = "" />
<h1 class=""><%= @food.name %></h1>
<p class = "date-title" >Date: <%=@food.date.strftime('%d/%m/%Y')%></p>

<div class="card-exercise" style="width: 30rem; height: 30rem;">
  <div class="card-body">

    <% @meals.each do |meal| %>
      <div class="d-flex justify-content-between">
        <span class="text-decoration-line-through"></span>

            <p class="lead-exercise"><em>Exercise</em>    <%=meal.name%></p>
            <p class="lead-exercise"><em>Weight:</em>    <%=meal.weight%></p>

        <%= link_to meal_path(meal), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this workout log?" } do %>
          <%= image_tag "bin_delete.png", style: "width: 20px; height: 20px" %>
        <% end %>
      </div>
    <% end %>
</div>
</div>

  <h2 class= "motivation"> "Sewey - IShowSpeed"</h2>
</div>
