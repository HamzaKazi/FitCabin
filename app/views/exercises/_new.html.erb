 <div class="modal-body">
          <%= simple_form_for [workout, exercise] do |f| %>
            <%= f.error_notification %>
            <%= f.input :set, label: "Name of exercise", placeholder: "Bench press, Tricep pushdown etc ...."%>
            <%= f.input :rep,  label: "Number of sets", placeholder: ""  %>
            <%= f.input :weight, label: "55, 60", placeholder: ""  %>
            <%= f.button :submit, "Submit", class: "btn btn btn-lg "%>
        <% end %>
  </div>
