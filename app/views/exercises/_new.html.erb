 <div class="modal-body">
          <%= simple_form_for [food, meal] do |f| %>
            <%= f.error_notification %>
             <%= f.input :name, label: "Type of exercise", placeholder: "Bench press, Tricep pushdown etc ...."%>
            <%= f.input :calories, label: "Weight ", placeholder: ""  %>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <%= f.button :submit, "Submit", class: "btn btn btn-lg "%>
        <% end %>
  </div>
