  <section class="hero">
		<div class="col-lg-6 offset-lg-3">
        <button type="button" class="btn-primary-social" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
         New post
        </button>
        <br>
      <%# <div class="container"> %>
      <%# <div class="row" style="width: 100%;"> %>
          <% @posts.each do |post| %>
      <div class="cardbox shadow-lg bg-white">

        <div class="cardbox-heading">
          <!-- START dropdown-->
          <div class="dropdown float-right">
            <button class="btn btn-flat btn-flat-icon" type="button" data-toggle="dropdown" aria-expanded="false">
            </button>
          </div><!--/ dropdown -->
          <div class="media m-0">
          <div class="d-flex mr-3">
          <a href=""><img class="img-fluid rounded-circle" src="http://www.themashabrand.com/templates/bootsnipp/post/assets/img/users/4.jpg" alt="User"></a>
          </div>
          <div class="media-body">
              <p class="m-0">FitCabin_Username</p>
            <small><span><i class="icon ion-md-pin"></i> London, England</span></small>
            <small><span><i class="icon ion-md-time"></i> 10 hours ago</span></small>
          </div>
          </div><!--/ media -->
        </div><!--/ cardbox-heading -->

        <div class="cardbox-item">
          <img class="img-fluid"  >
                      <% if post.image.attached? %>
                      <%=cl_image_tag post.image.key, class: "mx-auto d-block card-img-top img-fluid" %>
                      <% else %>
                      <%= image_tag url="https://images.unsplash.com/photo-1534438327276-14e5300c3a48?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80" %>
                      <% end %>
        </div><!--/ cardbox-item -->
        <div class="cardbox-base">
          <ul class="float-right">
          <li><a><i class="fa fa-comments"></i></a></li>
          <li><a><em class="mr-5"><%= post.likes%></em></a></li>
          <li><a><i class="fa fa-share-alt"></i></a></li>
          <li><a><em class="mr-3">03</em></a></li>
          </ul>
          <ul>

          <li>
              <%= link_to like_post_path(post), data: { turbo_method: 'put', controller: "like_button"} do %>
                <i class="fa-solid fa-heart"></i>
              <% end %>
          </li>

          <li><a href="#"><img src="http://www.themashabrand.com/templates/bootsnipp/post/assets/img/users/3.jpeg" class="img-fluid rounded-circle" alt="User"></a></li>
          <li><a href="#"><img src="http://www.themashabrand.com/templates/bootsnipp/post/assets/img/users/1.jpg" class="img-fluid rounded-circle" alt="User"></a></li>
          <li><a href="#"><img src="http://www.themashabrand.com/templates/bootsnipp/post/assets/img/users/5.jpg" class="img-fluid rounded-circle" alt="User"></a></li>
          <li><a href="#"><img src="http://www.themashabrand.com/templates/bootsnipp/post/assets/img/users/2.jpg" class="img-fluid rounded-circle" alt="User"></a></li>
          <li><a><span class="post-likes"><%= post.likes%></span></a></li>
          <li><a><span class="post-caption"><%= post.caption%></span></a></li>
          </ul>
          <!--/ comment section-->
        <div class="row" style="width: 100%;">
          <div class="comments">
            <li><span> <% post.comments.each do |comment| %>
            FitCabin_Username
            <p class="comment-card-title" style="color:black;"><%= comment.content%></p>
            <% end %>
            </span></li>
          </div>
        </div><!--/ cardbox-base -->
        <div class="cardbox-comments">
          <span class="comment-avatar float-left">
          <a href=""><img class="rounded-circle" src="http://www.themashabrand.com/templates/bootsnipp/post/assets/img/users/6.jpg" alt="..."></a>
          </span>
          <div class="search">
          <div class="modal-body2">
          <%= render "new_comment", post: post %>
        </div>
        <br>
          <%# <input placeholder="Write a comment" type="text"> %>
          </div><!--/. Search -->
        </div><!--/ cardbox-like -->
      </div><!--/ cardbox -->

    </div><!--/ col-lg-6 -->



    <% end %>
  </section>



    <p id="notice"><%= notice %></p>
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="staticBackdropLabel">Enter details of your workout</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <%= render "new_post" %>
          </div>

        </div>
      </div>
    </div>
</div>
