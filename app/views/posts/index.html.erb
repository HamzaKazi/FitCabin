
  <section id="header" class="jumbotron text-center">

  <br>
      <h1 class="display-3">Social Feed Page</h1>
  </section>

  <section id="gallery">
  <br>
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
    New post
  </button>
      <div class="container">
      <div class="row" style="width: 100%;">
          <% @posts.each do |post| %>
             <div class="col">
                <div class="card" style="width: 20rem;">
                <% if post.image.attached? %>
                     <%=cl_image_tag post.image.key, class: "mx-auto d-block card-img-top img-fluid" %>
                     <% else %>
                     <%= image_tag url="https://media.istockphoto.com/vectors/no-image-available-icon-vector-id1216251206?k=20&m=1216251206&s=170667a&w=0&h=A72dFkHkDdSfmT6iWl6eMN9t_JZmqGeMoAycP-LMAw4=" %>
                     <% end %>
                  <div class="card-body">
                    <h5 class="card-title" style="color:black;"><%= post.caption%></h5>
                      <% post.comments.each do |comment| %>
                    <h5 class="card-title" style="color:black;"><%= comment.content%></h5>
                    <% end %>
                    <head>
                  <meta charset="UTF-8">
                  <meta name="viewport" content="width=device-width,initial-scale=1">
                </head>
                    <p class="card-price" style="color:black;">Likes  <%= post.likes%></p>

                    <%= link_to "Add Comment", new_post_comment_path(post) %>

       <div class="modal-body2">
        <%= render "new_comment", post: post %>
      </div>

                    <%= link_to like_post_path(post), data: { turbo_method: 'put', controller: "like_button"} do%>
                   <i class="fa-solid fa-heart"></i>
                    <% end %>
                  </div>
                </div>
            </div>
          <% end %>
        </div>
    </div>
  </section>
<p id="notice"><%= notice %></p>
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Enter details of your workout</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render "new_post" %>
      </div>

    </div>
  </div>
</div>
